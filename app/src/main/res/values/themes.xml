<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pro_X" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pencil</item>
        <item name="colorPrimaryVariant">@color/pencilDark</item>
        <item name="colorOnPrimary">@color/honey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pencilComplemtry</item>
        <item name="colorSecondaryVariant">@color/pencilComplementryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Apptheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/pencil</item>
        <item name="colorPrimaryVariant">@color/pencilDark</item>
        <item name="colorOnPrimary">@color/honey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pencilComplemtry</item>
        <item name="colorSecondaryVariant">@color/pencilComplementryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/background</item>
        <item name="colorPrimary">@color/pencil</item>
        <item name="colorPrimaryVariant">@color/pencilDark</item>
        <item name="colorOnPrimary">@color/honey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pencilComplemtry</item>
        <item name="colorSecondaryVariant">@color/pencilComplementryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>